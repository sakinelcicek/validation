@{
    ViewData["Title"] = "Index";
}
@model List<Category>;
<div class="row justify-content-center">
    <div class="col-md-12 ">
    
        <a class="btn btn-primary mb-2" asp-controller="category" asp-action="add" >Kategori Ekle</a>

        <table class="table table-dark table-striped text-center">
            <thead>
                <tr>
                    <th>Kategori ID</th>
                    <th>Kategori Adı</th>
                    <th>Açıklama</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.CategoryName</td>
                        <td>@item.Description</td>
                        <td><a class="btn btn-success" asp-controller="category" asp-action="update" asp-route-id="@item.Id">Güncelle</a>
                            <a asp-controller="category" asp-action="remove" asp-route-id="@item.Id"
                                class="btn btn-danger">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

</div>